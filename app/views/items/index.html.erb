<h1> Items </h1>

<table>
  <tr>
    <th>item id</th>
    <th>Name</th>
    <th>Price</th>
    <th></th>
    <th></th>
  </tr>


  <% Item.all.each do |i|%>
      <tr>
        <td><%= i.id %></td>
        <td><%= link_to i.name, item_path(i) %></td>
        <td><%= i.price %> руб.</td>
        <td><%= link_to "Удалить", item_path(i), method: :delete, data: { confirm: "Точно удалить?" } %></td>
        <td>Рейтинг: <%= i.votes_count%>, <%=link_to "+", upvote_item_path(i)%></td>
      </tr>
  <% end %>
</table>

<%= render partial: "shared/email" %>
